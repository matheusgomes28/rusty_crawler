{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "RustyCrawler",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rusty_crawler",
                    "--package=rusty_crawler"
                ],
                "filter": {
                    "name": "rusty_crawler",
                    "kind": "bin"
                }
            },
            "args": [
                "--starting-url",
                "https://matgomes.com",
                "--max-links",
                "200",
                "--max-images",
                "300",
                "--log-status"
            ],
            "env": {
                "RUST_LOG": "info"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rusty_crawler'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rusty_crawler",
                    "--package=rusty_crawler"
                ],
                "filter": {
                    "name": "rusty_crawler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}