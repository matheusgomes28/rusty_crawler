    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rusty_crawler'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rusty_crawler",
                    "--package=rusty_crawler"
                ],
                "filter": {
                    "name": "rusty_crawler",
                    "kind": "bin"
                }
            },
            "args": [
                "--starting-url",
                "https://policies.google.com/terms"
            ],
            "env": {
                "RUST_LOG": "info"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rusty_crawler'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rusty_crawler",
                    "--package=rusty_crawler"
                ],
                "filter": {
                    "name": "rusty_crawler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}